<<h1><%= answer_header(@answer) %></h1>

<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>
  <p>
    <%= form.label 'Текст ответа' %>><br>
    <%= form.text_area :body, id: :answer_body, rows: 7, cols: 60 %>
  </p>
  <br>

  <p>
    <%= form.label 'Правильный ответ' %>><br>
    <%= form.check_box :correct, id: :answer_correct %>
  </p><br>

  <p><%= form.submit value = 'Применить' %></p>
<% end %>
