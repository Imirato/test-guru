<h1>Прохождение теста: <%= @test_passage.test.title %></h1>

<b>
  <p> <%= "Вопрос #{@test_passage.current_question_number} / #{@test_passage.test.questions.count}: #{@test_passage.current_question.body}" %></p>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object_id}" %>
      <%= b.label %>
    </p>
  <% end %>

  <p><%= link_to 'Gist', test_passage_gists_path(@test_passage), method: :post %></p>
  <p><%= form.submit 'Следующий вопрос' %></p>
<% end %>
