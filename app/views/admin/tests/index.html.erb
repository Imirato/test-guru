<h1><%= t('.header') %></h1>

<table>
  <tr>
    <th><%= t('.title') %></th>
    <th><%= t('.level') %></th>
    <th><%= t('.questions_quantity') %></th>
  </tr>

  <% @tests.each do |test| %>
    <tr>
      <td>
        <li><%= link_to test.title, admin_test_path(test) %></li>
      </td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= link_to t('links.update'), edit_admin_test_path(test) %></td>
      <td><%= link_to t('links.delete'),
                      admin_test_path(test),
                      method: :delete,
                      data: { confirm: t('confirmation.delete') } %></td>
    </tr>
  <% end %>
</table>

<p>
  <%= link_to t('links.create'), new_admin_test_path(@test) %>
</p>
