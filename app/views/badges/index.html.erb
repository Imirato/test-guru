<h1><%= t('.header') %></h1>

<%= render 'shared/errors', resource: @badge %>

<table>
  <tr>
    <th><%= t('.title') %></th>
    <th><%= t('.image') %></th>
  </tr>

  <% @badges.each do |badge| %>
    <tr>
      <td><%= badge.title %></td>
      <td><%= badge.image %></td>
    </tr>
  <% end %>
</table>
